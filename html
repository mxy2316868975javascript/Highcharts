        },
        //图例
        legend: {
            layout: 'vertical',//图例内容布局方式，有水平布局及垂直布局可选，对应的配置值是： “horizontal”， “vertical”
            align: 'right',//居右
            verticalAlign: 'middle',
            borderWidth: 0
        },
        //数据列
        series: [{
            name: 'Tokyo',
